# IDRX API Mode
IDRX_MODE=demo  # Options: 'demo' | 'production'

# Demo Mode Settings (optional, only used when IDRX_MODE=demo)
DEMO_PROCESSING_DELAY=2000  # Simulate 2s processing time
DEMO_SUCCESS_RATE=100       # 100% success rate for demo

# IDRX API Credentials (only needed when IDRX_MODE=production)
IDRX_API_KEY=your_idrx_api_key
IDRX_SECRET_KEY=your_idrx_secret_key
IDRX_API_URL=https://idrx.co/api

# Blockchain
MANTLE_SEPOLIA_RPC=https://rpc.sepolia.mantle.xyz
BORROWING_PROTOCOL_ADDRESS=0x...  # Your deployed contract address on Mantle Sepolia
TREASURY_PRIVATE_KEY=0x...  # Treasury wallet private key

# Contract Addresses
IDRX_TOKEN_ADDRESS=0x...  # MockIDRX or IDRX token on Mantle Sepolia

# Admin
ADMIN_API_KEY=your_admin_secret  # For admin endpoints
CRON_SECRET=your_cron_secret  # For Vercel cron authentication

# Network
NETWORK_CHAIN_ID=5003  # Mantle Sepolia
